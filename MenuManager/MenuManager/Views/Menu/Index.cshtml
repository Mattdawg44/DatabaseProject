@model IEnumerable<MenuManager.Models.Menu>

@{
    ViewBag.Title = "Menus";
}

<h2>Menus</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.MenuItems)</th>
            <th>@Html.DisplayNameFor(model => model.Ingredients)</th>
            <th>@Html.DisplayNameFor(model => model.Store)</th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>@HtmlBuilder.DetailsLink(Url, "Menu", item.ID, item.Name)</td>
        <td>@HtmlBuilder.ListLink(Url, "MenuItem", item.MenuItems.Count(), new { m = item.ID })</td>
        <td>@HtmlBuilder.ListLink(Url, "Ingredient", item.Ingredients.Count(), new { m = item.ID })</td>
        <td>@HtmlBuilder.DetailsLink(Url, "Store", item.Store_ID, item.Store.Name)</td>
        <td class="list-actions">
            @HtmlBuilder.EditItemLink(Url, "Menu", item.ID)
            @HtmlBuilder.DeleteItemLink(Url, "Menu", item.ID)
        </td>
    </tr>
}
</table>
