@model IEnumerable<MenuManager.Models.Ingredient>

@{
    ViewBag.Title = "Ingredients";
}

<h2>Ingredients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th class="hidden-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.Amount_Low)
            </th>
            <th>Is Low</th>
            <th class="hidden-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th class="hidden-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.Shelf_Life)
            </th>
            <th>Is Old</th>
            <th>@Html.DisplayNameFor(model => model.Store)</th>
            <th>@Html.DisplayNameFor(model => model.Menus)</th>
            <th>@Html.DisplayNameFor(model => model.MenuItems)</th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>@HtmlBuilder.DetailsLink(Url, "Ingredient", item.ID, item.Name)</td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
            @Html.DisplayFor(modelItem => item.Amount_Unit)
        </td>
        <td class="hidden-md hidden-sm hidden-xs">
            @Html.DisplayFor(modelItem => item.Amount_Low)
            @Html.DisplayFor(modelItem => item.Amount_Unit)
        </td>
        <td>@item.IsLowYesNo(true)</td>
        <td class="hidden-md hidden-sm hidden-xs">
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td class="hidden-md hidden-sm hidden-xs">
            @Html.DisplayFor(modelItem => item.Shelf_Life)
        </td>
        <td>@item.IsOldYesNo(true)</td>
        <td>@HtmlBuilder.DetailsLink(Url, "Store", item.Store_ID, item.Store.Name)</td>
        <td>@HtmlBuilder.ListLink(Url, "Menu", item.Menus.Count(), new { i = item.ID })</td>
        <td>@HtmlBuilder.ListLink(Url, "MenuItem", item.MenuItems.Count(), new { i = item.ID })</td>
        <td class="list-actions">
            @HtmlBuilder.EditItemLink(Url, "Ingredient", item.ID)
            @HtmlBuilder.DeleteItemLink(Url, "Ingredient", item.ID)
        </td>
    </tr>
}

</table>
